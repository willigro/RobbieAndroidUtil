<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Robbie.TextInputTheme">
        <item name="robbieTextInputBackgroundPrimary">@color/robbie_input_text_background</item>
    </style>

    <style name="Robbie.TextInput">
        <item name="theme">?robbieTextInputTheme</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">@bool/robbie_input_text_all_caps</item>
        <item name="android:padding">@dimen/robbie_input_text_padding_default_all_sides</item>
        <item name="android:paddingBottom">@dimen/robbie_input_text_padding_default_bottom</item>
        <item name="android:inputType">text</item>
    </style>
</resources>